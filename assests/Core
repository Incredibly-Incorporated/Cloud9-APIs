        ["screen"] = edit_screen
    })

    local button_ender_chest_fuel = Button.new({
        ["text"] = "[Ender: Fuel]",
        ["xPos"] = 1,
        ["yPos"] = 10,
        ["foreground"] = colors.black,
        ["background"] = colors.white,
        ["bFlash"] = colors.lightGray,
        ["screen"] = edit_screen
    })

    local button_ender_chest_torch = Button.new({
        ["text"] = "[Ender: Torch]",
        ["xPos"] = 1,
        ["yPos"] = 11,
        ["foreground"] = colors.black,
        ["background"] = colors.white,
        ["bFlash"] = colors.lightGray,
        ["screen"] = edit_screen
    })

    -- # Event Handler:
    while true do
        local event, p1, p2, p3 = os.pullEvent()
        if open_menu then
            -- >> Skip...
        elseif event == "START_EDITTING" and editting then
            -- # Display Current Profile:
            Text.display({
                ["text"] = {
                    [1] = "Current Profile",
                    [2] = ": ",
                    [3] = "<",
                    [4] = loaded_profile.name,
