                },
                ["startX"] = 1,
                ["startY"] = 1,
                ["foreground"] = {
                    [1] = colors.black,
                    [2] = colors.black,
                    [3] = colors.red,
                    [4] = colors.lime,
                    [5] = colors.red
                },
                ["background"] = colors.white,
                ["wrapper"] = "concat",
                ["screen"] = edit_screen
            })

            -- # Draw Static Information:
            local line = ""
            for i = 1, edit_screen.width do
                line = line..string.char(183)
            end

            term.setTextColor(edit_screen, colors.black)
            for i = 3, edit_screen.height do
                term.setCursorPos(edit_screen, 31, i)
                term.write(edit_screen, string.char(183))
